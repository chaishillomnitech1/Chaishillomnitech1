# ScrollVerse Genesis Protocol - Environment Variables
# Copy this file to .env and fill in your values

# Private key for deployment (DO NOT COMMIT .env FILE)
# Get from MetaMask: Account Details > Export Private Key
PRIVATE_KEY=your_private_key_here

# Polygon Mumbai RPC URL (Testnet)
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Polygon Mainnet RPC URL
POLYGON_MAINNET_RPC_URL=https://polygon-rpc.com

# Scroll Mainnet RPC URL
SCROLL_MAINNET_RPC_URL=https://rpc.scroll.io

# Scroll Sepolia RPC URL (Testnet)
SCROLL_SEPOLIA_RPC_URL=https://sepolia-rpc.scroll.io

# PolygonScan API Key for contract verification
# Get from: https://polygonscan.com/apis
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# ScrollScan API Key for contract verification
# Get from: https://scrollscan.com/apis
SCROLLSCAN_API_KEY=your_scrollscan_api_key_here

# Vault addresses for CHX Token
CREATOR_VAULT_ADDRESS=0x0000000000000000000000000000000000000000
AMBASSADOR_VAULT_ADDRESS=0x0000000000000000000000000000000000000000
DAO_VAULT_ADDRESS=0x0000000000000000000000000000000000000000

# Noor Token Configuration
NOOR_ZAKAT_RECIPIENT_1=0x0000000000000000000000000000000000000000
NOOR_ZAKAT_RECIPIENT_2=0x0000000000000000000000000000000000000000
NOOR_NODE_OPERATOR_1=0x0000000000000000000000000000000000000000
